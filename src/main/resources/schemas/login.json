{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Login",
    "description": "Login request data",
    "type": "object",
    "properties": {
        "email": {
            "description": "User's email address",
            "type": "string",
            "format": "email"
        },
        "password": {
            "description": "User's password",
            "type": "string",
            "minLength": 8
        }
    },
    "required": ["email", "password"]
}
